<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper 	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="cn.com.bohui.bohuifin.mapper.RoleMapper">	<resultMap type="RoleBean" id="RoleResult">		<result column="role_id" property="roleId"/>		<result column="role_name" property="roleName"/>		<result column="list_order" property="listOrder"/>		<result column="state" property="state"/>		<result column="memo" property="memo"/>	</resultMap>	<sql id="baseSelect">		role_id,		role_name,		list_order,		state,		memo	</sql>	<insert id="saveRole" parameterType="RoleBean">		insert into t_role(role_id, role_name, list_order, state, memo)		values (#{roleId}, #{roleName}, #{listOrder}, #{state}, #{memo})	</insert>	<update id="updateRole" parameterType="RoleBean">		update t_role		set			role_name = #{roleName},			list_order = #{listOrder},			state = #{state},			memo = #{memo}		where			role_id = #{roleId}	</update>	<select id="listRoleByPage" parameterType="page" resultMap="RoleResult">		select			<include refid="baseSelect"/>		from			t_role	</select>	<delete id="removeRoleById" parameterType="int">		delete from t_role where role_id = #{roleId}	</delete></mapper>